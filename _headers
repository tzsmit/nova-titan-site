# Cache-Control Headers for Static Assets
# This file is compatible with Cloudflare Pages, Netlify, and other modern static hosts
# For GitHub Pages, use netlify.toml or configure headers at the CDN level

# HTML pages - short cache, revalidate
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# CSS and JavaScript - cache for 1 year with immutable
/assets/css/*
  Cache-Control: public, max-age=31536000, immutable

/assets/js/*
  Cache-Control: public, max-age=31536000, immutable

# Images - cache for 1 year
/assets/img/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - cache for 1 year
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Favicon files - cache for 1 week
/favicon*.png
  Cache-Control: public, max-age=604800

/apple-touch-icon.png
  Cache-Control: public, max-age=604800

# Root level pages
/
  Cache-Control: public, max-age=0, must-revalidate

# Security headers (best practices)
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Content-Security-Policy: default-src 'self'; img-src 'self' data: https: http:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://plausible.io https://link.msgsndr.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; connect-src 'self' https://www.google-analytics.com https://plausible.io; font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net; frame-src https://api.leadconnectorhq.com;
